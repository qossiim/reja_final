<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>REJA</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body style="background-color: greenyellow">
    <div class="container">
      <h1 class="display-4 text-center py-3">Reja va Maqsadlar</h1>

      <div class="p-3 shadow-sm bg-light rounded">
        <form action="/create-item" method="POST" id="create-form">
          <div class="d-flex align-items-center">
            <input
              id="create-field"
              name="item"
              class="form-control me-3"
              style="flex: 1"
              type="text"
              autofocus
              autocomplete="off"
            />
            <button class="btn btn-primary" style="border-radius: 20px">
              Yangi reja qoshish
            </button>
          </div>
        </form>

        <ul id="item-list" class="list-group pb-5 mt-3">
          <% items.forEach(function(item){ %>
          <li
            class="list-group-item list-group-item-info d-flex align-items-center justify-content-between"
          >
            <span class="item-text"><%= item.reja %></span>
            <div>
              <button
                data-id="<%= item._id %>"
                class="edit-me btn btn-secondary btn-sm me-1"
              >
                ozgartirish
              </button>
              <button
                data-id="<%= item._id %>"
                class="delete-me btn btn-danger btn-sm"
              >
                ochirish
              </button>
            </div>
          </li>
          <% }) %>
        </ul>

        <button class="btn btn-light m-3">Hammasini tozalash</button>
      </div>
    </div>
  </body>
</html>
